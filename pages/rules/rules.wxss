/**rules.wxss**/
.container {
  padding-top: 120rpx;
  justify-content: flex-start;
  background: linear-gradient(135deg, #0a1930 0%, #152b48 50%, #1e3c68 100%);
}

.dark-texture {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: repeating-linear-gradient(
    -45deg,
    rgba(255, 255, 255, 0.03),
    rgba(255, 255, 255, 0.03) 1px,
    transparent 1px,
    transparent 6px
  );
  z-index: -1;
  pointer-events: none;
}

.rules-container {
  width: 90%;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

.rules-title {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 40rpx;
  text-align: center;
  text-shadow: 0 0 10rpx rgba(100, 180, 255, 0.6);
}

.rule-item {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start;
  background-color: rgba(70, 90, 130, 0.4);
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
}

.rule-number {
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(30, 136, 229, 0.6);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.rule-content {
  flex: 1;
  font-size: 30rpx;
  line-height: 1.5;
  padding-top: 10rpx;
  color: white;
} 