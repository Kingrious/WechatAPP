/**settings.wxss**/
.container {
  padding-top: 120rpx;
  justify-content: flex-start;
  background: linear-gradient(135deg, #0a1930 0%, #152b48 50%, #1e3c68 100%);
}

.dark-texture {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: repeating-linear-gradient(
    -45deg,
    rgba(255, 255, 255, 0.03),
    rgba(255, 255, 255, 0.03) 1px,
    transparent 1px,
    transparent 6px
  );
  z-index: -1;
  pointer-events: none;
}

.card {
  margin-bottom: 30rpx;
  background-color: rgba(70, 90, 130, 0.4);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  position: relative;
  z-index: 1;
}

.subtitle {
  font-weight: bold;
  color: rgba(100, 180, 255, 0.9);
  margin-bottom: 20rpx;
}

.category-list, .time-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.category-item, .time-item {
  width: 45%;
  text-align: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  background-color: rgba(50, 70, 110, 0.5);
  border-radius: 10rpx;
  color: white;
}

.category-item.active, .time-item.active {
  background-color: rgba(30, 136, 229, 0.6);
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.rounds-selector {
  display: flex;
  justify-content: center;
  align-items: center;
}

.round-control {
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(30, 136, 229, 0.6);
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
}

.round-value {
  margin: 0 40rpx;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
} 