/**app.wxss**/
page {
  width: 100vw;
  height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  background: linear-gradient(135deg, #0a1930 0%, #152b48 50%, #1e3c68 100%);
  color: #ffffff;
  font-size: 16px;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 20rpx;
  position: relative;
}

.btn {
  background-color: rgba(70, 90, 130, 0.6);
  color: white;
  border-radius: 16rpx;
  padding: 24rpx 40rpx;
  margin: 20rpx 0;
  font-size: 32rpx;
  text-align: center;
  width: 85%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4px);
}

.btn-green {
  background-color: rgba(76, 175, 80, 0.3);
  border: 1px solid rgba(76, 175, 80, 0.7);
}

.btn-orange {
  background-color: rgba(255, 152, 0, 0.3);
  border: 1px solid rgba(255, 152, 0, 0.7);
}

.btn-red {
  background-color: rgba(244, 67, 54, 0.3);
  border: 1px solid rgba(244, 67, 54, 0.7);
}

.title {
  font-size: 64rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
  color: #ffffff;
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.3);
}

.subtitle {
  font-size: 36rpx;
  margin-bottom: 30rpx;
  color: #ffffff;
}

.card {
  background-color: rgba(70, 90, 130, 0.4);
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 20rpx;
  width: 90%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4px);
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-col {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.space-between {
  justify-content: space-between;
}

.space-around {
  justify-content: space-around;
}

.dark-texture {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: repeating-linear-gradient(
    -45deg,
    rgba(255, 255, 255, 0.03),
    rgba(255, 255, 255, 0.03) 1px,
    transparent 1px,
    transparent 6px
  );
  z-index: -1;
  pointer-events: none;
} 
